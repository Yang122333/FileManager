<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>
<LinearLayout
    android:id="@+id/ui_linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@id/create_directory"
        android:text="新建文件夹"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/search_file"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/operate_file_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/copy_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制" />

        <Button
            android:id="@+id/cut_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪切" />

        <Button
            android:id="@+id/delete_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除" />
        <Button
            android:id="@+id/chose_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:visibility="visible"/>
        <Button
            android:id="@+id/cancel_chose_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消全选"
            android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/copy_and_cut_file_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:id="@+id/create_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="新建文件夹" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="取消" />

        <Button
            android:id="@+id/paste_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="粘贴" />
    </RelativeLayout>

</LinearLayout>